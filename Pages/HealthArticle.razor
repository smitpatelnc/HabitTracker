@page "/articles"
@using HabitTracker.Models
@using HabitTracker.Services
@inject ArticleService ArticleService
@inject NavigationManager NavigationManager

<div class="container">
    <h2 class="page-title">Articles</h2>

    @if (articles == null)
    {
        <p>Loading...</p>
    }
    else if (articles.Count == 0)
    {
        <p>No articles found.</p>
    }
    else
    {
        <div class="article-container">
            @foreach (var article in articles)
            {
                <div class="article">
                    <h3 class="article-title">@article.Title</h3>
                    <p class="article-content">@article.AbbreviatedContent</p>
                    <p class="article-published-date">Published Date: @article.PublishedDate.ToShortDateString()</p>
                    <button class="detail-button" @onclick="() => NavigateToDetail(article.ArticleId)">Detail</button>
                </div>
            }
        </div>
    }
</div>

@code {
    List<Article> articles;

    protected override void OnInitialized()
    {
        articles = ArticleService.GetAllArticles();
    }

    private void NavigateToDetail(int articleId)
    {
        NavigationManager.NavigateTo($"/article/{articleId}");
    }
}

<style>
    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .page-title {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    .article-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .article {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .article-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .article-content {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .article-published-date {
        font-size: 14px;
        color: #666;
        margin-top: 10px;
    }

    .detail-button {
        padding: 6px 12px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .detail-button:hover {
            background-color: #0056b3;
        }
</style>
