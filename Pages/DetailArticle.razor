@page "/article/{id}"
@using HabitTracker.Models
@using HabitTracker.Services
@inject ArticleService ArticleService
@inject NavigationManager NavigationManager

<div class="container">
    <h2 class="page-title">Article Detail</h2>

    @if (article == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="article">
            <h3 class="article-title">@article.Title</h3>
            <ul class="article-content">
                @foreach (var point in GetContentPoints(article.Content))
                {
                    <li>@point</li>
                }
            </ul>
            <p class="article-published-date">Published Date: @article.PublishedDate.ToShortDateString()</p>
            <button class="back-button" @onclick="GoBack">Back to Articles</button>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    private Article article;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrWhiteSpace(Id) && int.TryParse(Id, out int articleId))
        {
            article = ArticleService.GetArticleById(articleId);
        }
        else
        {
            NavigationManager.NavigateTo("/articles");
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/articles");
    }

    private List<string> GetContentPoints(string content)
    {
        // Split content into points based on newline characters
        return content.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries).ToList();
    }

}

<style>
    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .page-title {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    .article {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .article-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .article-content {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 15px;
        padding-left: 20px;
    }

    .article-published-date {
        font-size: 14px;
        color: #666;
        margin-top: 10px;
    }

    .back-button {
        padding: 6px 12px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 20px;
    }

        .back-button:hover {
            background-color: #0056b3;
        }
</style>
